<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}Accueil{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="{{ asset('images/icone/icone_assisteo.png') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/themify-icons.css') }}">
    <link rel="stylesheet" href="{{ asset('css/metisMenu.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/slicknav.min.css') }}">
    <!-- amchart css -->
    <link rel="stylesheet" href="{{ asset('css/export.css') }}" type="text/css" media="all" />
    <!-- others css -->
    <link rel="stylesheet" href="{{ asset('css/typography.css') }}">
    <link rel="stylesheet" href="{{ asset('css/default-css.css') }}">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <!-- modernizr css -->
    <script src="{{ asset('js/vendor/modernizr-2.8.3.min.js') }}"></script>

    
   
    <!-- modernizr css -->

    {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}
</head>

<!-- Si user non connecté -->

    {% if not app.user %}
    <div id="preloader">
    <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- error area start -->
    <div class="error-area ptb--100 text-center">
        <div class="container">
            <div class="error-content">
                <h2>oups!</h2>
                <p>Veuillez d'abord vous connecter</p>
                <a href="{{ path('security_login') }}">Conexion</a>
            </div>
        </div>
    </div>
    {% else %}

<body>

    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- page container area start -->
    <div class="page-container">
        <!-- sidebar menu area start -->
        <div class="sidebar-menu">
            <div class="sidebar-header">
                <div class="logo">
                    <a href="{{ path('accueil_show') }}"><img src="{{ asset('images/logo/logo_assisteo.png') }}" alt="logo"></a>
                </div>
            </div>
            <div class="main-menu">
                <div class="menu-inner">
                    <nav>
                        <ul class="metismenu" id="menu">
                            
                            <li class="{% if tab is defined and tab == 'bord' %}active{% endif %}">
                                <a href="{{ path('accueil_show') }}" style="text-decoration:none" aria-expanded="true"><i class="ti-dashboard"></i><span>Tableau de bord</span></a>
                            </li>
                            
                            <li class="{% if conge is defined and conge == 'conges' %}active{% endif %}">
                                <a href="{{ path('conges_show') }}" style="text-decoration:none" aria-expanded="true"><i class="ti-pie-chart"></i><span>Congés</span></a>
                            </li>
                            <li class="{% if permission is defined and permission == 'permissions' %}active{% endif %}">
                                <a href="{{ path('permission_show') }}" style="text-decoration:none" aria-expanded="true"><i class="ti-palette"></i><span>Permisssions</span></a>
                            </li>
                            <li class="{% if personnel is defined and personnel == 'personnels' %}active{% endif %}">
                                <a href="{{ path('personnel_show')}}" style="text-decoration:none" aria-expanded="true"><i class="ti-layout-sidebar-left"></i><span>Personnels
                                    </span></a>
                            </li>
                            <li class="{% if note is defined and note == 'notes' %}active{% endif %}">
                                <a href="{{ path('note_interne')}}" style="text-decoration:none" aria-expanded="true"><i class="ti-pencil-alt"></i><span>Note interne
                                    </span></a>
                            </li>
                            
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- sidebar menu area end -->
        <!-- main content area start -->
        <div class="main-content">
            <!-- header area start -->
            <div class="header-area">
                <div class="row align-items-center">
                    <!-- nav and search button -->
                    <div class="col-md-6 col-sm-8 clearfix">
                        <div class="nav-btn pull-left">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                    <!-- profile info & task notification -->
                    <div class="col-md-6 col-sm-4 clearfix">
                        <ul class="notification-area pull-right">
                            <li id="full-view"><i class="ti-fullscreen"></i></li>
                            <li id="full-view-exit"><i class="ti-zoom-out"></i></li>
                            <li>
                                <i class="ti-user" data-toggle="dropdown">
                                </i><span><b>{{ app.user.username }}</b></span>
                                
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- header area end -->
            <!-- page title area start -->
            <div class="page-title-area">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="breadcrumbs-area clearfix">
                            <h4 class="page-title pull-left">Dashboard</h4>
                            <ul class="breadcrumbs pull-left">
                                <li><a href="{{ path('accueil_show') }}">Home</a></li>
                                <li><span>Dashboard</span></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6 clearfix">
                        <div class="user-profile pull-right">
                            
                            <a class="user-name dropdown-toggle" style="color:white" href="{{ path('security_logout') }}">Deconnexion</a>
                            
                        </div>
                    </div>

                </div>

            </div>
            <!-- **************** TOUS LES CONTENUS SERONT ICI *************** -->
            {% block body %}{% endblock %}
            <!-- page title area end -->
        </div>

        <!-- main content area end -->
        <!-- footer area start-->
        <footer>
            <div class="footer-area">
                <p>© Copyright <span id="year"></span>. Tous droits réservés. Par Nick Steven.</p>
            </div>
        </footer>
        <!-- footer area end-->
    </div>
    <!-- page container area end -->
    <!-- offset area start -->
    {% endif %}
    <!-- offset area end -->
    <!-- jquery latest version -->
    <script src="{{ asset('js/vendor/jquery-2.2.4.min.js') }}"></script>
    <!-- bootstrap 4 js -->
    <script src="{{ asset('js/popper.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('js/metisMenu.min.js') }}"></script>
    <script src="{{ asset('js/jquery.slimscroll.min.js') }}"></script>
    <script src="{{ asset('js/jquery.slicknav.min.js') }}"></script>

    <!-- all line chart activation -->
    <script src="{{ asset('js/line-chart.js') }}"></script>
    <!-- all pie chart -->
    <script src="{{ asset('js/pie-chart.js') }}"></script>
    <!-- others plugins -->
    <script src="{{ asset('js/plugins.js') }}"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>

    <script>
        var an = document.getElementById("year");
        var d = new Date();
        var y = d.getFullYear();
        an.innerHTML = y;
    </script>
        {% block javascripts%}
        {% endblock %}
</body>
</html>
