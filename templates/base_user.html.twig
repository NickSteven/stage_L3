<!-- Si l'utilisateur n'est pas connecté -->
{% if not app.user %}
    <div id="preloader">
    <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- error area start -->
    <div class="error-area ptb--100 text-center">
        <div class="container">
            <div class="error-content">
                <h2>oups!</h2>
                <p>Veuillez d'abord vous connecter</p>
                <a href="{{ path('security_login') }}">Conexion</a>
            </div>
        </div>
    </div>
{% else %}

<body class="main-container">
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- main wrapper start -->
    <div class="horizontal-main-wrapper">
        <!-- main header area start -->
        
        <!-- main header area end -->
        <!-- header area start -->
        <div class="header-area header-bottom" style="background-color: #303641">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-9  d-none d-lg-block">
                        <div class="horizontal-menu">
                            <nav>
                                <ul id="nav_menu">

                                    <li>
                                        <div class="logo">
                                            <a href="{{ path('user_dashboard') }}"><img src="{{ asset('images/logo/logo_assisteo.png') }}" alt="logo"></a>
                                        </div>
                                        
                                    </li>
                                    <li>
                                        <a type="button" href="{{ path('user_dashboard') }}"><i class="ti-dashboard" style="color: white"></i><span style="color: white">Mon tableau de bord</span></a>
                                        
                                    </li>
                                    {% if app.user.avoir_solde == 1 %}
                                    <li>
                                        <a href="{{ path('conge_new') }}"><i class="ti-layout-sidebar-left" style="color: white"></i><span style="color: white">Demander un congé</span></a>
                                    </li>
                                    <li>
                                        <a href="{{ path('permission_new') }}"><i class="ti-pie-chart" style="color: white"></i><span style="color: white">Demander une permission</span style="color: white"></a>
                                    </li>
                                    {% else %}
                                    <li>
                                        <span style="color: #fff;">Veulliez demander à l'administrateur pour activer les demandes</span>
                                    </li>
                                    {% endif %}

                                    
                                </ul>

                            </nav>

                        </div>

                    </div>
                    
                    <!-- nav and search button -->
                    <div class="col-md-3.999999999999999999999999 clearfix" style="margin-left: 150px">
                        <div class="search-box col-lg-10">
                            <button class="btn btn-secondary dropdown-toogle" type="button" data-toggle="dropdown" style="background-color: #303641"><i class="ti-user"></i>  {{ app.user.username }}</button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="{{ path('security_logout') }}">Deconnexion</a>
                                        </div>
                        </div>
                    </div>
                    <!-- mobile_menu -->
                    <div class="col-12 d-block d-lg-none">
                        <div id="mobile_menu"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header area end -->
        <!-- page title area end -->
        
        {% block body %}{% endblock %}
        <!-- main content area end -->
        <!-- footer area start-->
        
        <!-- footer area end-->
    </div>
    <!-- main wrapper start -->
    <!-- offset area start -->
    <div class="offset-area">
        <div class="offset-close"><i class="ti-close"></i></div>
        <ul class="nav offset-menu-tab">
            <li><a class="active" data-toggle="tab" href="#activity">Activity</a></li>
            <li><a data-toggle="tab" href="#settings">Settings</a></li>
        </ul>
        <div class="offset-content tab-content">
        </div>
        <div id="snackbar">Some text some message..</div>
    </div>
    <footer>
            <div class="footer-area">
                <p>© Copyright <span id="year"></span>. Tous droits réservés. Par Nick Steven.</p>
            </div>
        </footer>
{% endif %}
{% block javascripts %}{% endblock %}
    <script type="text/javascript">
        function showToast() {
            {
                // Get the snackbar DIV
                var x = document.getElementById("snackbar");
              
                // Add the "show" class to DIV
                x.className = "show";
              
                // After 3 seconds, remove the show class from DIV
                setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
              }
        }
    </script>
    <!-- offset area end -->
    <!-- jquery latest version -->
    <script src="{{ asset('js/vendor/jquery-2.2.4.min.js') }}"></script>
